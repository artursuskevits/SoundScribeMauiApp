<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SoundScribe.Views.Tracklist"
             Title="Tracklist">
    <StackLayout>
        <ListView x:Name="SongList" ItemsSource="{Binding}" ItemSelected="OnItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.View>
                            <StackLayout Orientation="Vertical">
                            <StackLayout Orientation="Horizontal">
                                <Image Source = "{Binding Image}" WidthRequest="50" HeightRequest="50" />
                                <Label Text="{Binding Artist}" FontSize="Medium" />
                                </StackLayout>
                                <Label Text="{Binding Song_Name }" FontSize="Medium" />
                                
                            </StackLayout>
                        </ViewCell.View>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>