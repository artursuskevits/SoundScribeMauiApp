<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SoundScribe.ViewModels"
             x:Class="SoundScribe.Views.RatePage"
             Title="RatePage">
    <ContentPage.BindingContext>
        <local:RatePageViewModel />
    </ContentPage.BindingContext>
    <StackLayout HorizontalOptions="CenterAndExpand">
        <Image Source="{Binding Image}" WidthRequest="200" HeightRequest="200"/>
        <Label x:Name="ArtistLabel" Text="{Binding Artist}" />
        <Label x:Name="SongNameLabel" Text="{Binding Song_Name}" />
        <WebView x:Name="SoundCloudWebView"
                 HorizontalOptions="FillAndExpand"
                 VerticalOptions="FillAndExpand" 
                 Source="{Binding Link}"/>
        <Label x:Name="RhymesLabel" Text="Rhymes" />
        <HorizontalStackLayout>
            <Slider x:Name="RhymesSlider" ValueChanged="Slider_ValueChanged" VerticalOptions="CenterAndExpand" Minimum="0" Maximum="10" HorizontalOptions="FillAndExpand" Value="{Binding Rhymes, Mode=TwoWay}" />
            <Label x:Name="RhymesValueLabel" Text="{Binding Rhymes}" />
        </HorizontalStackLayout>

        <Label x:Name="StructureLabel" Text="Structure" />
        <HorizontalStackLayout>
            <Slider x:Name="StructureSlider" ValueChanged="Slider_ValueChanged" VerticalOptions="CenterAndExpand" Minimum="0" Maximum="10" HorizontalOptions="FillAndExpand" Value="{Binding Structure, Mode=TwoWay}" />
            <Label x:Name="StructureValueLabel" Text="{Binding Structure}" />
        </HorizontalStackLayout>

        <Label x:Name="StyleRealizationLabel" Text="Style realization" />
        <HorizontalStackLayout>
            <Slider x:Name="StyleRealizationSlider" ValueChanged="Slider_ValueChanged" VerticalOptions="CenterAndExpand" Minimum="0" Maximum="10" HorizontalOptions="FillAndExpand" Value="{Binding Style_realization, Mode=TwoWay}" />
            <Label x:Name="StyleRealizationValueLabel" Text="{Binding Style_realization}" />
        </HorizontalStackLayout>

        <Label x:Name="IndividualityLabel" Text="Individuality" />
        <HorizontalStackLayout>
            <Slider x:Name="IndividualitySlider" ValueChanged="Slider_ValueChanged" VerticalOptions="CenterAndExpand" Minimum="0" Maximum="10" HorizontalOptions="FillAndExpand" Value="{Binding Individuality, Mode=TwoWay}" />
            <Label x:Name="IndividualityValueLabel" Text="{Binding Individuality}" />
        </HorizontalStackLayout>

        <Label x:Name="AtmosphereLabel" Text="Atmosphere" />
        <HorizontalStackLayout>
            <Slider x:Name="AtmosphereSlider" ValueChanged="Slider_ValueChanged" VerticalOptions="CenterAndExpand" Minimum="0" Maximum="5" HorizontalOptions="FillAndExpand" Value="{Binding Atmosphere, Mode=TwoWay}" />
            <Label x:Name="AtmosphereValueLabel" Text="{Binding Atmosphere}" />
        </HorizontalStackLayout>

        <Label x:Name="TrendinessLabel" Text="Trendiness" />
        <HorizontalStackLayout>
            <Slider x:Name="TrendinessSlider" ValueChanged="Slider_ValueChanged" VerticalOptions="CenterAndExpand" Minimum="0" Maximum="5" HorizontalOptions="FillAndExpand" Value="{Binding Trendiness, Mode=TwoWay}" />
            <Label x:Name="TrendinessValueLabel" Text="{Binding Trendiness}" />
        </HorizontalStackLayout>


        <StackLayout Orientation="Horizontal">
            <Button Text="Save" Clicked="Button_Clicked" />
            <Button Text="Cancel" Clicked="Cancel" />
        </StackLayout>
    </StackLayout>
</ContentPage>
